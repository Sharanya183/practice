// Online C compiler to run C program online
#include <stdio.h>

void quiz();

int main() {
    
    int start;
    
    printf("Press 1 to start quiz\n");
    printf("Press 0 to quit\n");
    
    scanf("%d", &start);
    
    if(start == 1)
    {
        quiz();
    }
    else if(start == 0)
    {
        printf("Exit!");
    }

    return 0;
}

void quiz()
{
    printf("Let's Start!\n");
    
    int ans1, ans2, ans3, ans4, score = 0;
    
    printf("Q1)\n1. opt 1\n2. opt 2\n3. opt 3\n4. opt 4\n");
    scanf("%d", &ans1);
    
    printf("Q2)\n1. opt 1\n2. opt 2\n3. opt 3\n4. opt 4\n");
    scanf("%d", &ans2);
    
    printf("Q3)\n1. opt 1\n2. opt 2\n3. opt 3\n4. opt 4\n");
    scanf("%d", &ans3);
    
    printf("Q4)\n1. opt 1\n2. opt 2\n3. opt 3\n4. opt 4\n");
    scanf("%d", &ans4);
    
    switch (ans1){
        case 1:
        score += 1;
        break;
        
        default:
        break;
    }
        
    switch (ans2){
        case 1:
        score += 1;
        break;
        
        default:
        break;
    }
        
    switch (ans3){
        case 2:
        score += 1;
        break;
        
        default:
        break;
    }
        
    switch (ans4){
        case 4:
        score += 1;
        break;
        
        default:
        break;
    }
        
    
    printf("Score: %d", score);
    
    
}
